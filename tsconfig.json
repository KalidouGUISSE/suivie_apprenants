{
  "compilerOptions": {
    // Dossiers
    "rootDir": "./src",
    "outDir": "./dist",

    // Environnement Node (ESM + ESNext)
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "lib": ["ESNext"],
    "types": ["node"],

    // Génération de fichiers
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Vérifications strictes
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Modules et imports
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

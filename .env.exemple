# ------------------------------
# Node / Express
# ------------------------------
PORT=3000                  # Port de l'application Node.js

# ------------------------------
# MySQL
# ------------------------------
DB_HOST=db                 # Nom du service Docker pour la base de données
DB_PORT=3306               # Port MySQL exposé
MYSQL_DATABASE=gestion_apprenants  # Nom de la base de données
MYSQL_USER=your_user       # Nom d'utilisateur MySQL
MYSQL_PASSWORD=your_password  # Mot de passe MySQL
MYSQL_ROOT_PASSWORD=root   # Mot de passe root (admin) MySQL

# ------------------------------
# Prisma
# ------------------------------
# La variable DATABASE_URL est construite automatiquement depuis les variables MySQL
# Exemple de format : mysql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=mysql://${MYSQL_USER}:${MYSQL_PASSWORD}@${DB_HOST}:${DB_PORT}/${MYSQL_DATABASE}

generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Competence {
  id           Int       @id @default(autoincrement())
  libelle      String
  niveaux      Niveau[]  // relation many-to-many implicite
  referentiels Referentiel[] @relation("ReferentielCompetences")
}
model Niveau {
  id          Int          @id @default(autoincrement())
  libelle    String       @unique
  rang        Int
  competences Competence[] // relation many-to-many implicite
}
model Promo {
  id        Int      @id @default(autoincrement())
  libelle   String @unique
  dateDebut DateTime
  dateFin   DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Referentiel {
  id           Int           @id @default(autoincrement())
  libelle      String @unique
  competences  Competence[]  @relation("ReferentielCompetences")
}


model ProfilSortie {
  id      Int    @id @default(autoincrement())
  libelle String @unique
}



model Users {
  id        Int      @id @default(autoincrement())
  nom       String
  prenom    String
  email     String   @unique
  login     String   @unique
  password  String
  telephone String?
  adresse   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  profilId  Int
  profil    Profil   @relation(fields: [profilId], references: [id])
}



model Profil {
  id          Int           @id @default(autoincrement())
  libelle     String        @unique
  users       Users[]
  permissions Permission[]  @relation("ProfilPermissions")
}

model Permission {
  id      Int      @id @default(autoincrement())
  action  String   @unique
  profils Profil[] @relation("ProfilPermissions")
}

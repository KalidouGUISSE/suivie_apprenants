generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Promo {
  id        Int      @id @default(autoincrement())
  libelle   String
  dateDebut DateTime
  dateFin   DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Users {
  id        Int      @id @default(autoincrement())
  nom       String
  prenom    String
  email     String   @unique
  login     String   @unique
  password  String
  telephone String?
  role      String
  adresse   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}